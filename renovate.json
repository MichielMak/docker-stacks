{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":label(renovate)",
    ":dependencyDashboard",
    "docker:pinDigests"
  ],
  "rangeStrategy": "bump",
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "after 20:00 every weekday",
    "every weekend",
    "before 07:00 every weekday"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": [
        "docker-compose"
      ],
      "groupName": "stack: {{packageFileDirNamed}}",
      "addLabels": [
        "stack:{{packageFileDirNamed}}"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "ghcr images",
      "matchPackageNames": [
        "/^ghcr\\.io//"
      ]
    }
  ],
  "rebaseWhen": "behind-base-branch",
  "commitBodyTable": true
}
